{{>layout/header}}
<!-- 로그인 기능 영역 -->
<div>
    {{#userName}}
        <span id="user">{{userName}}</span>님 환영합니다!
        <a href="/logout" class="btn btn-danger active" role="button">로그아웃</a>
    {{/userName}}
</div>
<br>
<div>
    <a href="/posts/save" role="button" class="btn btn-primary">등록</a>
    {{^userName}}
        <a href="/oauth2/authorization/google" class="btn btn-success active" role="button">구글 로그인</a>
        <a href="/oauth2/authorization/naver" class="btn btn-secondary active" role="button">네이버 로그인</a>
    {{/userName}}
</div>
<br>
<!-- 목록 출력 영역 -->
<table class="table table-horizontal table-bordered">
    <thead class="thead-strong">
    <tr>
        <th>게시글 번호</th>
        <th>제목</th>
        <th>작성자</th>
        <th>최종 수정일</th>
    </tr>
    </thead>
    <tbody id="tbody">
    {{#posts}}
        <tr>
            <td>{{id}}</td>
            <td><a href="/posts/update/{{id}}">{{title}}</a></td>
            <td>{{author}}</td>
            <td>{{modifiedDate}}</td>
        </tr>
    {{/posts}}
    </tbody>
</table>
{{>layout/footer}}
